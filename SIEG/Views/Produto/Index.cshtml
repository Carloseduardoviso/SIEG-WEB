<div class="card-body">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title text-dark">Cadastro de produto</h3>
        </div>

        ﻿<div class="container">
            <div class="flex-row">
                <div class="base-home">
                    <div class="base-form">
                        <h3>Preencha os campos do cadastro abaixo</h3>
                        <form action="" method="post">
                            <div class="caixa100">
                                <div class="marcacao">
                                    <h5>Dado do produto</h5>
                                    <div class="row">
                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput1" class="form-label">Produto <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" aria-label="Produto" placeholder="Digite o nome do produto">
                                        </div>
                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput2" class="form-label">Estoque Inicial <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="Digite o estoque inicial">
                                        </div>
                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput1" class="form-label">Estoque_minimo <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" aria-label="Estoque_minimo" placeholder="Digite o estoque minimo">
                                        </div>
                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput1" class="form-label">Estoque_atual <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" aria-label="Estoque_atual" readonly="readonly">
                                        </div>
                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput1" class="form-label">Preço <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" aria-label="Preço" placeholder="Digite o preço">
                                        </div>

                                        <div class="col-sm-12 col-md-4">
                                            <label for="exampleFormControlInput1" class="form-label">Ativo  <span class="text-danger">*</span></label>
                                            <input type="text" class="form-control" aria-label="Ativo" placeholder="Ativo">
                                        </div>                                        
                                    </div>
                                    <input type="hidden" name="id_cliente" value="" />

                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger me-md-2" data-bs-dismiss="modal">Cancelar</button>
                                        <button type="button" class="btn btn-success">Concluir cadastro</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>